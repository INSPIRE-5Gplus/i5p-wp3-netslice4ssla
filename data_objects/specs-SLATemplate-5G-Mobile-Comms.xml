					<specs:security_metrics>
						<!-- Each metric includes the abstract metric definition and the concrete metric -->
						<!-- security metrics for anti-DDoS -->
						<specs:Metric name="Service Uptime" referenceId="SERVICE_UPTIME">
							<specs:MetricDefinition>
								<specs:unit name="rate">
									<specs:intervalUnit>
										<specs:intervalItemsType>float</specs:intervalItemsType>
										<specs:intervalItemStart>0</specs:intervalItemStart>
										<specs:intervalItemStop>1</specs:intervalItemStop>
										<specs:intervalItemStep>0.01</specs:intervalItemStep>
									</specs:intervalUnit>
								</specs:unit>
								<specs:scale>
									<specs:Quantitative>Ratio</specs:Quantitative>
								</specs:scale>
								<specs:expression>Amount of time that the service is online available and operational</specs:expression>
								<specs:definition></specs:definition>
								<specs:note></specs:note>
							</specs:MetricDefinition>
						</specs:Metric>

						<specs:Metric name="Intrusion (DDoS) Detection Scan Frequency" referenceId="INTRUSION_SCAN_FREQ">
							<specs:MetricDefinition>
								<specs:unit name="seconds">
									<specs:intervalUnit>
										<specs:intervalItemsType>integer</specs:intervalItemsType>
										<specs:intervalItemStart>1</specs:intervalItemStart>
										<specs:intervalItemStop></specs:intervalItemStop>
										<specs:intervalItemStep></specs:intervalItemStep>
									</specs:intervalUnit>
								</specs:unit>
								<specs:scale>
									<specs:Quantitative>Ratio</specs:Quantitative>
								</specs:scale>
								<specs:expression>Time interval between 2 scans in seconds</specs:expression>
								<specs:definition>Frequency of the scan for intrusion on the network, including detection of P2P traffic and DDoS attacks.
								</specs:definition>
								<specs:note></specs:note>
							</specs:MetricDefinition>
		
							<specs:AbstractMetricRuleDefinition>
								<specs:RuleDefinition name="Intrusion Detection Scan Frequency - Check Strategy" referenceId="INTRUSION_SCAN_FREQ_CHECK_STRATEGY">
									<specs:definition>This rule defines how to check that the desired frequency of detection is respected</specs:definition>
									<specs:note></specs:note>
								</specs:RuleDefinition>
							</specs:AbstractMetricRuleDefinition>
							<specs:AbstractMetricParameterDefinition>
								<specs:ParameterDefinition name="Intrusion Detection Scan Frequency - Check Interval" referenceId="INTRUSION_SCAN_FREQ_CHECK_INTERVAL">
									<specs:definition>This parameter refers to the time, expressed in hours, between two subsequent checks</specs:definition>
									<specs:parameterType>integer</specs:parameterType>
									<specs:note></specs:note>
								</specs:ParameterDefinition>
							</specs:AbstractMetricParameterDefinition>

							<specs:MetricRules>
								<specs:MetricRule>
									<specs:ruleDefinitionId>INTRUSION_SCAN_FREQ_CHECK_STRATEGY</specs:ruleDefinitionId>		
									<specs:value>check scan timestamp</specs:value>
									<specs:note></specs:note>
								</specs:MetricRule>
							</specs:MetricRules>
							<specs:MetricParameters>
								<specs:MetricParameter>
									<specs:parameterDefinitionId>INTRUSION_SCAN_FREQ_CHECK_INTERVAL</specs:parameterDefinitionId>
									<specs:value>1</specs:value>
									<specs:note></specs:note>
								</specs:MetricParameter>
							</specs:MetricParameters>
							<specs:note></specs:note>
						</specs:Metric>

						<specs:Metric name="Intrusion (DDoS) Detection Scan Report Age" referenceId="INTRUSION_SCAN_REPORT_AGE">
							<specs:MetricDefinition>
								<specs:unit name="hours">
									<specs:intervalUnit>
										<specs:intervalItemsType>integer</specs:intervalItemsType>
										<specs:intervalItemStart>1</specs:intervalItemStart>
										<specs:intervalItemStop></specs:intervalItemStop>
										<specs:intervalItemStep></specs:intervalItemStep>
									</specs:intervalUnit>
								</specs:unit>
								<specs:scale>
									<specs:Quantitative>Ratio</specs:Quantitative>
								</specs:scale>
								<specs:expression></specs:expression>
								<specs:definition>Age of the intrusion detection scanning report</specs:definition>
								<specs:note></specs:note>
							</specs:MetricDefinition>
							<!-- if applicable, set Rule and Parameter definitions -->
							<specs:AbstractMetricRuleDefinition>
								<specs:RuleDefinition name="Intrusion Detection Scan Report Age - Basic Check Strategy" referenceId="INTRUSION_SCAN_REPORT_AGE_CHECK_STRATEGY">
									<specs:definition>This rule defines how to check that the intrusion detection scan report is not too old</specs:definition>
									<specs:note></specs:note>
								</specs:RuleDefinition>
							</specs:AbstractMetricRuleDefinition>
							<specs:AbstractMetricParameterDefinition>
								<specs:ParameterDefinition name="Intrusion Detection Scan Report Age - Basic Check Interval" referenceId="INTRUSION_SCAN_REPORT_AGE_CHECK_INTERVAL">
									<specs:definition>This parameter refers to the time, expressed in hours, between two subsequent checks</specs:definition>
									<specs:parameterType>integer</specs:parameterType>
									<specs:note></specs:note>
								</specs:ParameterDefinition>
							</specs:AbstractMetricParameterDefinition>

							<specs:MetricRules>
								<specs:MetricRule>
									<specs:ruleDefinitionId>INTRUSION_SCAN_REPORT_AGE_CHECK_STRATEGY</specs:ruleDefinitionId>
									<specs:value>check report timestamp</specs:value>
									<specs:note></specs:note>
								</specs:MetricRule>
							</specs:MetricRules>
							<specs:MetricParameters>
								<specs:MetricParameter>
									<specs:parameterDefinitionId>INTRUSION_SCAN_REPORT_AGE_CHECK_INTERVAL</specs:parameterDefinitionId>
									<specs:value>1</specs:value>
									<specs:note>the maximum value for this measurement should be set to the value of metric "INTRUSION_SCAN_FREQ"</specs:note>
								</specs:MetricParameter>
							</specs:MetricParameters>
							<specs:note></specs:note>
						</specs:Metric>

                        <!-- FOCUS ON CRYPTOCURRENCY MINING TRAFFIC DETECTION -->
						<specs:Metric name="Intrusion (Malicious Traffic) Detection Accuracy" referenceId="DETECTION_ACC_HOURLY">
							<specs:MetricDefinition>
								<specs:unit name="rate">
									<specs:intervalUnit>
										<specs:intervalItemsType>float</specs:intervalItemsType>
										<specs:intervalItemStart>0</specs:intervalItemStart>
										<specs:intervalItemStop>1</specs:intervalItemStop>
										<specs:intervalItemStep>0.01</specs:intervalItemStep>
									</specs:intervalUnit>
								</specs:unit>
								<specs:scale>
									<specs:Quantitative>Ratio</specs:Quantitative>
								</specs:scale>
								<specs:expression></specs:expression>
								<specs:definition>Proportion of correctly classified traffic records to the total (all stats measured over an hour): (TP+TN)/(TP+TN+FP+FN). 
									TP (resp. TN): number of actual malicious (resp. normal) records classified as malicious (resp. normal). 
									FP (resp. FN): number of actual malicious (resp. normal) records - mistakenly - classified as normal (resp. malicious)</specs:definition>
								<specs:note></specs:note>
							</specs:MetricDefinition>
						</specs:Metric>

                        <specs:Metric name="Intrusion (Malicious Traffic) Detection Precision" referenceId="DETECTION_PPV_HOURLY">
							<specs:MetricDefinition>
								<specs:unit name="rate">
									<specs:intervalUnit>
										<specs:intervalItemsType>float</specs:intervalItemsType>
										<specs:intervalItemStart>0</specs:intervalItemStart>
										<specs:intervalItemStop>1</specs:intervalItemStop>
										<specs:intervalItemStep>0.01</specs:intervalItemStep>
									</specs:intervalUnit>
								</specs:unit>
								<specs:scale>
									<specs:Quantitative>Ratio</specs:Quantitative>
								</specs:scale>
								<specs:expression></specs:expression>
								<specs:definition>Also known as Positive Predictive Value. Proportion of detected malicious traffic records to the total number of malicious traffic records (all stats measured over an hour): TP/(TP+FP).
									TP (resp. TN): number of actual malicious (resp. normal) records classified as malicious (resp. normal). 
									FP (resp. FN): number of actual malicious (resp. normal) records - mistakenly - classified as normal (resp. malicious)</specs:definition>
								<specs:note></specs:note>
							</specs:MetricDefinition>
						</specs:Metric>

                        <specs:Metric name="Intrusion (Malicious Traffic) Detection TPR" referenceId="DETECTION_TPR_HOURLY">
							<specs:MetricDefinition>
								<specs:unit name="rate">
									<specs:intervalUnit>
										<specs:intervalItemsType>float</specs:intervalItemsType>
										<specs:intervalItemStart>0</specs:intervalItemStart>
										<specs:intervalItemStop>1</specs:intervalItemStop>
										<specs:intervalItemStep>0.01</specs:intervalItemStep>
									</specs:intervalUnit>
								</specs:unit>
								<specs:scale>
									<specs:Quantitative>Ratio</specs:Quantitative>
								</specs:scale>
								<specs:expression></specs:expression>
								<specs:definition>True Positive Rate (all stats measured over an hour): TP/(TP+FN). Also known as sensitivity, recall, hit rate.
									TP (resp. TN): number of actual malicious (resp. normal) records classified as malicious (resp. normal). 
									FP (resp. FN): number of actual malicious (resp. normal) records - mistakenly - classified as normal (resp. malicious)</specs:definition>
								<specs:note></specs:note>
							</specs:MetricDefinition>
						</specs:Metric>

						<specs:Metric name="Intrusion (Malicious Traffic) Detection FPR" referenceId="DETECTION_FPR_HOURLY">
							<specs:MetricDefinition>
								<specs:unit name="rate">
									<specs:intervalUnit>
										<specs:intervalItemsType>float</specs:intervalItemsType>
										<specs:intervalItemStart>0</specs:intervalItemStart>
										<specs:intervalItemStop>1</specs:intervalItemStop>
										<specs:intervalItemStep>0.01</specs:intervalItemStep>
									</specs:intervalUnit>
								</specs:unit>
								<specs:scale>
									<specs:Quantitative>Ratio</specs:Quantitative>
								</specs:scale>
								<specs:expression></specs:expression>
								<specs:definition>False Positive Rate: FP/(FP+TN). Also known as fall-out.
									TP (resp. TN): number of actual malicious (resp. normal) records classified as malicious (resp. normal). 
									FP (resp. FN): number of actual malicious (resp. normal) records - mistakenly - classified as normal (resp. malicious)</specs:definition>
								<specs:note></specs:note>
							</specs:MetricDefinition>
						</specs:Metric>

						<specs:Metric name="Data Integrity" referenceId="DATA_INTEGRITY_LEVEL">
                            <specs:MetricDefinition>
                                <specs:unit name="">
                                    <specs:enumUnit>
                                        <specs:enumItemsType>integer</specs:enumItemsType>
                                        <specs:enumItems>
                                            <specs:enumItem>
												<specs:value>0</specs:value>
												<specs:description>no data integrity protection</specs:description>
											</specs:enumItem>
                                            <specs:enumItem>
												<specs:value>1</specs:value>
												<specs:description>data integrity protected but not authenticity (no data origin authentication)</specs:description>
											</specs:enumItem>
											<specs:enumItem>
												<specs:value>2</specs:value>
												<specs:description>data authenticity protected (including integrity and data origin authentication)</specs:description>
											</specs:enumItem>
                                        </specs:enumItems>
                                    </specs:enumUnit>
                                </specs:unit>
                                <specs:scale>
                                    <specs:Quantitative>Ratio</specs:Quantitative>
                                </specs:scale>
                                <specs:expression></specs:expression>
                                <specs:definition>Level of data-in-motion integrity protection.
                                </specs:definition>
                                <specs:note></specs:note>
                            </specs:MetricDefinition>
                        </specs:Metric>
						
						<specs:Metric name="Data Confidentiality" referenceId="DATA_CONFIDENTIALITY_LEVEL">
                            <specs:MetricDefinition>
                                <specs:unit name="">
                                    <specs:enumUnit>
                                        <specs:enumItemsType>integer</specs:enumItemsType>
                                        <specs:enumItems>
                                            <specs:enumItem>
												<specs:value>0</specs:value>
												<specs:description>no data confidentiality protection</specs:description>
											</specs:enumItem>
                                            <specs:enumItem>
												<specs:value>1</specs:value>
												<specs:description>data confidentiality protected without PFS (Perfect Forward Secrecy)</specs:description>
											</specs:enumItem>
											<specs:enumItem>
												<specs:value>2</specs:value>
												<specs:description>data confidentiality protected with PFS</specs:description>
											</specs:enumItem>
                                        </specs:enumItems>
                                    </specs:enumUnit>
                                </specs:unit>
                                <specs:scale>
                                    <specs:Quantitative>Ratio</specs:Quantitative>
                                </specs:scale>
                                <specs:expression>
                                </specs:expression>
                                <specs:definition>Level of data-in-motion confidentiality protection.
                                </specs:definition>
                                <specs:note></specs:note>
                            </specs:MetricDefinition>
                        </specs:Metric>

						<specs:Metric name="Cipher suite strength" referenceId="CIPHER_SUITE_STRENGTH">
                            <specs:MetricDefinition>
                                <specs:unit name="">
                                    <specs:enumUnit>
                                        <specs:enumItemsType>integer</specs:enumItemsType>
                                        <specs:enumItems>
                                            <specs:enumItem>
												<specs:value>2</specs:value>
												<specs:description>Cryptographic algorithms used for data confidentiality and integrity protection are all valid post-quantum algorithms from ENISA Report on Post-Quantum Cryptography v2 (May 2021)</specs:description>
											</specs:enumItem>
                                            <specs:enumItem>
												<specs:value>1</specs:value>
												<specs:description>Cryptographic algorithms and key sizes used for data confidentiality and integrity protection are all approved for "future" use by ECRYPT CSA D5.4 'Algorithms, Key Size and Protocols Report' (2018)</specs:description>
											</specs:enumItem>
											<specs:enumItem>
												<specs:value>0</specs:value>
												<specs:description>Neither STRONG nor POST_QUANTUM (not matching either description).</specs:description>
											</specs:enumItem>
                                        </specs:enumItems>
                                    </specs:enumUnit>
                                </specs:unit>
                                <specs:scale>
                                    <specs:Quantitative>Ratio</specs:Quantitative>
                                </specs:scale>
                                <specs:expression>
                                </specs:expression>
                                <specs:definition>Strength of the cipher suite.
                                </specs:definition>
                                <specs:note></specs:note>
                            </specs:MetricDefinition>
                        </specs:Metric>

                    </specs:security_metrics>
				</specs:serviceDescription>
